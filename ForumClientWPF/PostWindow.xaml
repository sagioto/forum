<Window x:Class="ForumClientWPF.PostWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PostWindow" Height="600" Width="844">
    <Grid Width="832">
        <Label Content="Subject:" FontFamily="Global User Interface" FontSize="16" FontWeight="Bold" Height="31" HorizontalAlignment="Left" Margin="140,12,0,0" Name="subjectLabel" VerticalAlignment="Top" Visibility="Visible" Width="79" />
        <Label Content="Post Title" FontFamily="Global User Interface" FontSize="16" FontWeight="Normal" Height="31" HorizontalAlignment="Left" Margin="246,12,0,0" Name="postTitleLabel" VerticalAlignment="Top" Visibility="Visible" Width="493" />
        <Label Content="Content:" FontFamily="Global User Interface" FontSize="16" FontWeight="Bold" Height="31" HorizontalAlignment="Left" Margin="140,43,0,0" Name="contentLabel" VerticalAlignment="Top" Visibility="Visible" Width="79" />
        <Label Content="Post Body" FontFamily="Global User Interface" FontSize="16" FontWeight="Normal" Height="151" HorizontalAlignment="Left" Margin="140,68,0,0" Name="postContentLabel" VerticalAlignment="Top" Visibility="Visible" Width="599" />
        <ListBox Height="328" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" ItemsSource="{Binding}" Margin="2,221,0,0" Name="repliesListBox" VerticalAlignment="Top" VerticalContentAlignment="Stretch" Width="818" />
    </Grid>
</Window>
